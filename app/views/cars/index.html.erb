<h1>Listing cars</h1>

<table style="border: 1px; width: 60%">
  <thead>
  <tr>
    <th>make</th>
    <th>model</th>
    <th>year</th>
    <th>price</th>
    <th colspan="3"></th>
  </tr>
</thead>

  <tbody>
  <!--<table id="car_table">-->
    <% @cars.each do |car| %>
      <tr>
        <td><%= car.make %></td>
        <td><%= car.model %></td>
        <td><%= car.year %></td>
        <td><%= number_to_currency(car.price) %></td>
        <td><%= link_to 'Edit car', edit_car_path(car) %></td>
        <td><%= link_to 'Show car', car %></td>
        <td><%= link_to 'Destroy car', car, method: :delete, data: { confirm: 'Are you really sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
  </table>

  <br>

